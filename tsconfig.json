{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "baseUrl": "src",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["es2017", "dom", "es2018.promise"]
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
